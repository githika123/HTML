function convertTemperature() {
let tempInput = document.getElementById("temperature").value;
let unit = document.getElementById("unit").value;
let resultElement = document.getElementById("result");
if (tempInput === "") {
resultElement.textContent = "Please enter a temperature value.";
return;
}
let temperature = parseFloat(tempInput);
let convertedTemp;
if (unit === "celsius") {
convertedTemp = (temperature * 9/5) + 32;
resultElement.textContent = `${temperature} 째C = ${convertedTemp.toFixed(2)} 째F`;
} else {
convertedTemp = (temperature - 32) * 5/9;
resultElement.textContent = `${temperature} 째F = ${convertedTemp.toFixed(2)} 째C`;
}
}
